.info
.list
    text-align left
    display block
    margin 0 auto 20px auto
    width 90%
h2
    font-weight 400
    font-size 1.2em
    margin 0 auto 5px auto
ul
    margin 0 0 5px 0
    padding 0
    list-style-type none
    font-size 1.0em
    li
        margin 0 0 5px 0 
        a
            color black
            text-decoration none
            border-bottom solid 1px rgba(0,0,0,0)
            transition border 500ms ease-out
            font-weight 300
            &:hover
                border-bottom solid 1px $black
